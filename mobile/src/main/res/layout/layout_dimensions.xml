<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.pelotasplus.constraintlayoutexamples.LayoutActivity">

    <TextView
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="@dimen/square_size"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/holo_green_light"
        android:text="1"
        android:textSize="40sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <TextView
        android:id="@+id/view2"
        android:layout_width="@dimen/square_size"
        android:layout_height="0dp"
        android:background="@android:color/holo_red_light"
        android:text="2"
        android:textSize="40sp"
        app:layout_constraintDimensionRatio="2:3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="62dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/view3"
        android:layout_width="@dimen/square_size"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_blue_light"
        android:text="3"
        android:textSize="40sp"
        app:layout_constraintDimensionRatio="2:3"
        app:layout_constraintLeft_toRightOf="@+id/view4"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <TextView
        android:id="@+id/view4"
        android:layout_width="@dimen/square_size"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_orange_light"
        android:text="4"
        android:textSize="40sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

</android.support.constraint.ConstraintLayout>
